<?xml version="1.0" encoding="utf-8" ?>
<Patch>          
                <Operation Class="PatchOperationRemove">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="Reverse_Engineered_ConditionCauserBase"]/designatorDropdown</xpath>
                </Operation>
    
                <Operation Class="PatchOperationFindMod">
                    <mods>
                    <li>Biotech</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                    <operations>
                        <li Class="PatchOperationReplace">
                        <success>Always</success>
                        <xpath>Defs/ThingDef[@Name="Reverse_Engineered_ConditionCauserBase"]/designationCategory</xpath>
                        <value>
                            <designationCategory>Ferny_Pollution</designationCategory>
                        </value>

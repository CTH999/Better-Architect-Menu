<?xml version="1.0" encoding="utf-8"?>

<!-- Gestalt Engine and Vanometric Generator have their own patches. -->

<Patch>

<!-- WEAPONS -->

    <Operation Class="PatchOperationReplace">
		<success>Always</success>
        <xpath>Defs/ThingDef[defName="RM_Turret_AutoShardLance"]/designationCategory</xpath>
        <value>
            <designationCategory>Ferny_Weapons</designationCategory>
        </value>
    </Operation>
	
    <Operation Class="PatchOperationReplace">
		<success>Always</success>
        <xpath>Defs/ThingDef[defName="RM_Turret_AutoShardSwarmer"]/designationCategory</xpath>
        <value>
            <designationCategory>Ferny_Weapons</designationCategory>
        </value>
    </Operation>

<!-- MECHANOIDS -->
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="RM_DroidBase"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_Mechanoids</designationCategory>
		</value>
	</Operation>
	
</Patch>